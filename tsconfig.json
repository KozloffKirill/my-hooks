{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "ESNext", //https://webpack.js.org/configuration/configuration-languages/#typescript
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true, //https://webpack.js.org/configuration/configuration-languages/#typescript
    "esModuleInterop": true, //https://webpack.js.org/configuration/configuration-languages/#typescript
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "paths": {
      "@shared/*": ["./src/shared/*"],
      "@entities/*": ["./src/entities/*"],
      "@features/*": ["./src/features/*"],
      "@widgets/*": ["./src/widgets/*"],
      "@pages/*": ["./src/pages/*"],
      "@app/*": ["./src/app/*"],
    }
  },
  "ts-node": {
    //https://webpack.js.org/configuration/configuration-languages/#typescript
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
